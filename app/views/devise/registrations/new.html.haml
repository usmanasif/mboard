%h2= t('users.sign_up.head')

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .form-group
    = f.label :email
    = f.email_field :email, class: 'form-control', required: true

  .form-group
    = f.label :first_name
    = f.text_field :first_name, class: 'form-control', required: true

  .form-group
    = f.label :last_name
    = f.text_field :last_name, class: 'form-control', required: true

  .form-group
    = f.label :password
    - if @minimum_password_length
      %em (#{@minimum_password_length} characters minimum)
    = f.password_field :password, autocomplete: 'off', class: 'form-control', required: true

  .form-group
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', required: true

  .actions
    = f.submit t('users.sign_up.submit'), class: 'btn btn-sm btn-success'

= render 'devise/shared/links'
